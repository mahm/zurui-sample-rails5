!!! 5
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %title Zurui Sass Sample for Rails5
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}
    %meta{:content => '', :name => 'description'}
    %meta{:content => '', :name => 'author'}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
  %body(class="#{controller_name} #{controller_name}_#{action_name}")
    %nav.navbar.fixed-top{role: 'navigation'}
      = link_to root_path, class: 'navbar-brand' do
        Zurui Sass Sample for Rails5
      %ul.navbar-nav.mr-auto
      %button.navbar-toggler{'data-target' => '#navbar-ex1-collapse', 'data-toggle' => 'collapse', type: 'button'}
        %span.navbar-toggler-icon
    .navbar.fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
    .container
      .row
        .col-md-3
          = yield :sidemenu
        .col-md-9
          = yield
      %hr
        %footer
          %p &copy; Company #{Date.current.year}
